rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read access for any authenticated user
      allow read: if request.auth != null;
      
      // Allow write access only for the specific Admin UID
      allow write: if request.auth != null && request.auth.uid == 'bUcN6WkkweefwEs2q8TYq75VDzy2';
    }
  }
}
