rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Allow reading the control doc so the app can fetch login credentials
    match /Control/E {
      allow read: if true;
    }

    match /{document=**} {
      // Allow reading for any authenticated user
      allow read: if request.auth != null;
      
      // Full write access only for your specific Control Account UID
      allow write: if request.auth != null && request.auth.uid == 'bUcN6WkkweefwEs2q8TYq75VDzy2';
    }
  }
}